{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Price againts Rating Scores",
    "width":500,
    "description": "A scatterplot showing body mass and flipper lengths of penguins.",
    "data": {
      "url": "https://raw.githubusercontent.com/ChiptenIsCool/FIT3179_ASSIGNMENT_2/main/data/dtaversion6336.csv"
    },
     "params": [
   {
      "name": "room_using",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Entire home/apt",
          "Private room",
          "Shared room"
        ],
        "labels":[
          "Show All",
          "Entire Home or Apartment",
          "Private room",
          "Shared room"
        ],
        "name": "Room Type: "
      }
   }
   ],
   "transform":[
        {"filter": "room_using == null || datum.room_type == room_using"},
        {"filter": "datum.review_scores_rating >20"}
    ],
    "encoding": {
      "x": {
        "field": "review_scores_rating",
        "type": "quantitative",
        "scale": {"zero": false},
        "title":"Review Scores"
      },
      "y": {
        "field": "price",
        "type": "quantitative",
        "scale": {"zero": false},
        "title":"Price"
      }
    },
    "layer": [
      {
        "selection": {
          "room_type_highlight": {
            "type": "multi",
            "fields": ["room_type"],
            "bind": "legend"
          }
        },
        "mark": "point",
        "encoding": {
          "color": {
            "field": "room_type",
            "title": "Room Type",
            "type": "nominal",
            "scale": {
              "domain": [
                "Entire home/apt",
                "Private room",
                "Shared room"
              ], 
              "range": ["#08519c", "#f1a340", "#c51b7d"]
            }
          },
          "opacity": {
            "condition": {"selection": "room_type_highlight", "value": 0.9},
            "value": 0.006
          },
          "tooltip": [
            {"field": "room_type", "type": "nominal", "title": "Room Type"},
            {"field": "price", "type": "quantitative", "title": "Price (AUD)"},
            {
              "field": "review_scores_rating",
              "type": "quantitative",
              "title": "Reviews Score Ratings"
            }
          ]
        }
      }
    ]
  }